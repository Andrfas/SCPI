<?xml version="1.0" encoding="UTF-8"?>
<project name="scpi" default="all">
  
  
  <property file="scpi.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.activejdbc-1.4.9.classpath">
    <pathelement location="${basedir}/resources/activejdbc-1.4.9.jar"/>
  </path>
  
  <path id="library.activejdbc-instrumentation-1.4.9.classpath">
    <pathelement location="${basedir}/resources/activejdbc-instrumentation-1.4.9.jar"/>
  </path>
  
  <path id="library.javassist.classpath">
    <pathelement location="${basedir}/resources/javassist.jar"/>
  </path>
  
  <path id="library.log4j-1.2.17.classpath">
    <pathelement location="${basedir}/resources/apache-log4j-1.2.17/log4j-1.2.17.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-5.0.8-bin.classpath">
    <pathelement location="${basedir}/../../mysql-connector-java-5.0.8-bin.jar"/>
  </path>
  
  <path id="library.slf4j-api-1.7.9.classpath">
    <pathelement location="${basedir}/resources/slf4j-1.7.9/slf4j-api-1.7.9.jar"/>
  </path>
  
  <path id="library.slf4j-log4j12-1.7.9.classpath">
    <pathelement location="${basedir}/resources/slf4j-1.7.9/slf4j-log4j12-1.7.9.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SCPI -->
  
  <dirname property="module.scpi.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.scpi" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.scpi" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.scpi" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.scpi" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="scpi.output.dir" value="${module.scpi.basedir}/out/production/SCPI"/>
  <property name="scpi.testoutput.dir" value="${module.scpi.basedir}/out/test/SCPI"/>
  
  <path id="scpi.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="scpi.module.production.classpath">
    <path refid="${module.jdk.classpath.scpi}"/>
    <path refid="library.activejdbc-1.4.9.classpath"/>
    <path refid="library.slf4j-api-1.7.9.classpath"/>
    <path refid="library.log4j-1.2.17.classpath"/>
    <path refid="library.mysql-connector-java-5.0.8-bin.classpath"/>
    <path refid="library.slf4j-log4j12-1.7.9.classpath"/>
    <path refid="library.activejdbc-instrumentation-1.4.9.classpath"/>
    <path refid="library.javassist.classpath"/>
  </path>
  
  <path id="scpi.runtime.production.module.classpath">
    <pathelement location="${scpi.output.dir}"/>
    <path refid="library.activejdbc-1.4.9.classpath"/>
    <path refid="library.slf4j-api-1.7.9.classpath"/>
    <path refid="library.log4j-1.2.17.classpath"/>
    <path refid="library.mysql-connector-java-5.0.8-bin.classpath"/>
    <path refid="library.slf4j-log4j12-1.7.9.classpath"/>
    <path refid="library.activejdbc-instrumentation-1.4.9.classpath"/>
    <path refid="library.javassist.classpath"/>
  </path>
  
  <path id="scpi.module.classpath">
    <path refid="${module.jdk.classpath.scpi}"/>
    <pathelement location="${scpi.output.dir}"/>
    <path refid="library.activejdbc-1.4.9.classpath"/>
    <path refid="library.slf4j-api-1.7.9.classpath"/>
    <path refid="library.log4j-1.2.17.classpath"/>
    <path refid="library.mysql-connector-java-5.0.8-bin.classpath"/>
    <path refid="library.slf4j-log4j12-1.7.9.classpath"/>
    <path refid="library.activejdbc-instrumentation-1.4.9.classpath"/>
    <path refid="library.javassist.classpath"/>
  </path>
  
  <path id="scpi.runtime.module.classpath">
    <pathelement location="${scpi.testoutput.dir}"/>
    <pathelement location="${scpi.output.dir}"/>
    <path refid="library.activejdbc-1.4.9.classpath"/>
    <path refid="library.slf4j-api-1.7.9.classpath"/>
    <path refid="library.log4j-1.2.17.classpath"/>
    <path refid="library.mysql-connector-java-5.0.8-bin.classpath"/>
    <path refid="library.slf4j-log4j12-1.7.9.classpath"/>
    <path refid="library.activejdbc-instrumentation-1.4.9.classpath"/>
    <path refid="library.javassist.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.scpi">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.scpi">
    <patternset refid="excluded.from.module.scpi"/>
  </patternset>
  
  <path id="scpi.module.sourcepath">
    <dirset dir="${module.scpi.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.scpi" depends="compile.module.scpi.production,compile.module.scpi.tests" description="Compile module SCPI"/>
  
  <target name="compile.module.scpi.production" depends="register.custom.compilers" description="Compile module SCPI; production classes">
    <mkdir dir="${scpi.output.dir}"/>
    <javac2 destdir="${scpi.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.scpi}/javac">
      <compilerarg line="${compiler.args.scpi}"/>
      <bootclasspath refid="scpi.module.bootclasspath"/>
      <classpath refid="scpi.module.production.classpath"/>
      <src refid="scpi.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.scpi"/>
    </javac2>
    
    <copy todir="${scpi.output.dir}">
      <fileset dir="${module.scpi.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.scpi.tests" depends="register.custom.compilers,compile.module.scpi.production" description="compile module SCPI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.scpi" description="cleanup module">
    <delete dir="${scpi.output.dir}"/>
    <delete dir="${scpi.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.scpi" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.scpi" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>

  <path id="instrument_classpath">
    <pathelement location="out/production/SCPI"/>
    <path location="${basedir}/resources/activejdbc-instrumentation-1.4.9.jar"/>
    <path location="${basedir}/resources/javassist.jar"/>
    <path location="${basedir}/resources/activejdbc-1.4.9.jar"/>
  </path>

  <target name="compile">
    <javac srcdir="src" destdir="out/production/SCPI"/>
  </target>

  <target name="instrument" depends="compile">
    <java classname="org.javalite.instrumentation.Main">
      <sysproperty key="outputDirectory" value="out/production/SCPI"/>
      <classpath refid="instrument_classpath"/>
    </java>
  </target>
</project>